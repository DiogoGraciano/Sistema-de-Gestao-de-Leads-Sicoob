rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de leads
    match /leads_word_scramble_001/{document} {
      // Permitir leitura e escrita apenas para usuários autenticados
      allow read, write: if request.auth != null;
    }
    
    // Regras para a coleção de logs
    match /log/{document} {
      // Permitir leitura e escrita apenas para usuários autenticados
      allow read, write: if request.auth != null;
    }
    
    // Regras para outras coleções (se necessário)
    match /{document=**} {
      // Permitir leitura e escrita apenas para usuários autenticados
      allow read, write: if request.auth != null;
    }
  }
}
